import java.util.Random;
import java.text.DecimalFormat;

Random rand = new Random();
int quantidade = rand.nextInt(9901) + 100;
double preco = rand.nextDouble() * 899.99 + 100;
DecimalFormat dfPreco = new DecimalFormat("0.00");
DecimalFormat dfValor = new DecimalFormat("0.00");

String precoFormatado = dfPreco.format(preco);

double valor_trade = quantidade * preco;

String valor_tradeFormatado = dfValor.format(valor_trade);

double valor_trade_menor = valor_trade - 1;

String valor_trade_menorFormatado = dfValor.format(valor_trade_menor);

int qt1 = (int) (quantidade * 0.6);
int qt2 = quantidade - qt1;

vars.put("quantidade", Integer.toString(quantidade));
vars.put("preco", precoFormatado);
vars.put("valor_trade", valor_tradeFormatado);
vars.put("valor_trade_menor", valor_trade_menorFormatado);
vars.put("qt1", Integer.toString(qt1));
vars.put("qt2", Integer.toString(qt2));


import java.text.DecimalFormat;
import java.util.Random;

// criar um objeto Random
Random random = new Random();

// criar um objeto DecimalFormat para formatar valores de quantidade, preço e valor_trade
DecimalFormat dfQuantidade = new DecimalFormat("#");
DecimalFormat dfPreco = new DecimalFormat("##0.00");
DecimalFormat dfValorTrade = new DecimalFormat("##0.000");

// gerar um valor aleatório para quantidade
int quantidade = random.nextInt(9901) + 100; // valor mínimo: 100, valor máximo: 10000

// gerar um valor aleatório para preço
double preco = random.nextDouble() * 899.99 + 100.00; // valor mínimo: 100.00, valor máximo: 999.99

// calcular o valor_trade
double valor_trade = quantidade * preco;

// subtrair 1 do valor_trade e armazenar o resultado em valor_trade_menor
double valor_trade_menor = valor_trade - 1;

// formatar os valores com as casas decimais necessárias
String quantidadeFormatada = dfQuantidade.format(quantidade);
String precoFormatado = dfPreco.format(preco);
String valor_tradeFormatado = dfValorTrade.format(valor_trade);
String valor_trade_menorFormatado = dfValorTrade.format(valor_trade_menor);

// gerar os valores de qt1 e qt2
int qt1 = (int) (quantidade * 0.6);
int qt2 = quantidade - qt1;

// formatar os valores de qt1 e qt2 com as casas decimais necessárias
String qt1Formatado = dfQuantidade.format(qt1);
String qt2Formatado = dfQuantidade.format(qt2);

// subtrair 1 do preço e armazenar o resultado em preco_menor
double preco_menor = preco - 1;
String preco_menorFormatado = dfPreco.format(preco_menor);

// armazenar os valores em variáveis de usuário
vars.put("quantidade", quantidadeFormatada);
vars.put("preco", precoFormatado);
vars.put("valor_trade", valor_tradeFormatado);
vars.put("valor_trade_menor", valor_trade_menorFormatado);
vars.put("qt1", qt1Formatado);
vars.put("qt2", qt2Formatado);
vars.put("preco_menor", preco_menorFormatado);
